<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="css/home.css">
    <title>Home</title>
</head>
<body>
    <div id="content">
        <div id="sideBar" class="shadow p-3 mb-5 bg-white rounded">
            <strong><%=user.name%></strong>
            <div id="btnMenu">
                <button type="button" id="btnAdicionar" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#exampleModal">Adicionar</button>
                <button type="button" id="btnSair" class="btn btn-danger">Sair</button>
                <button type="button" id="btnApagarConta" onclick="removerConta('<%=user.id%>')" class="btn btn-danger">Remover Conta</button>
            </div>
           
        </div>
        <div id="mainContent">
            <%if(products.length == 0){%>
                <div id="containerObs">
                    <span id="msgNenhumProduto">Nenhum produto cadastrado.</span>
                    <p id="msgObs">Por favor, clique no botão "adicionar" e cadastre um produto.</p>
                </div>
                
            <%}%>
            <% products.forEach(el => {%>
                <div id="card" class="shadow p-3 mb-5 bg-white rounded">
                        <div id="cardHeader">
                            <span id="delete<%=el.code%>"  onclick="removeProduct('<%=el.id%>')" class="material-symbols-outlined clickable">
                                delete
                            </span>
                            <span onclick="editProduct('<%=el.id%>')" id="edit<%=el.code%>" class="material-symbols-outlined clickable" data-bs-toggle="modal" data-bs-target="#editModal">
                                edit
                            </span>
                        </div>
                        <div id="cardContent" >
                            <strong> <%=el.name%></strong>
                            <p>
                                <%=el.description%>
                            </p>
                            <p>
                                <Strong>Valor: </Strong>R$ <span> <%=el.value%></span>
                            </p>   
                        </div>
                </div>
            <%})%>
        </div>
    </div>
    
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Salvar</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="bodyModal" class="modal-body">
                <div>
                    <input type="text" id="name" name="name" class="input" placeholder="Nome">
                </div>
                <div>
                    <input type="text" id="code" name="value" class="input" placeholder="Código">
                </div>
                <div>
                    <input type="text" id="description" name="description" class="input" placeholder="Descrição">
                </div>
                <div>
                    <input type="text" id="value" name="value" class="input" placeholder="Valor">
                </div>
                <div>
                    <input type="text" id="author" hidden name="author" class="input" value="<%=user.id%>">
                </div>  
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              <button id="btnSalvar" type="button" class="btn btn-dark">Salvar</button>
            </div>
          </div>
        </div>
      </div>
      <!-- Modal edit -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Editar</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="bodyModal" class="modal-body">
                <div>
                    <input type="text" id="editName" name="name" class="input" placeholder="Nome">
                </div>
                <div>
                    <input type="text" id="editCode" name="value" class="input" placeholder="Código">
                </div>
                <div>
                    <input type="text" id="editDescription" name="description" class="input" placeholder="Descrição">
                </div>
                <div>
                    <input type="text" id="editValue" name="value" class="input" placeholder="Valor">
                </div>
                <div>
                    <input type="text" id="editId" hidden name="value" class="input" placeholder="Valor">
                </div>
                <div>
                    <input type="text" id="editAuthor" hidden name="author" class="input" value="<%=user.id%>">
                </div>  
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              <button id="btnEdit" type="button" class="btn btn-dark">Salvar</button>
            </div>
          </div>
        </div>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
      <script src="/scripts/home.js"></script>
</body>
</html>